{
  "name": "bnbweb-backend",
  "version": "2.0.0",
  "description": "Production-ready Backend API for Brew&Bean Coffee Company E-commerce Website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:inspect": "nodemon --inspect server.js",
    "test": "jest --watchAll --verbose",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "seed": "node scripts/seedDatabase.js",
    "seed:dev": "NODE_ENV=development node scripts/seedDatabase.js",
    "seed:prod": "NODE_ENV=production node scripts/seedDatabase.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run test:ci",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "build": "npm run validate",
    "production": "NODE_ENV=production node server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "docker:build": "docker build -t brewbean-backend .",
    "docker:run": "docker run -p 5000:5000 brewbean-backend",
    "health": "curl -f http://localhost:5000/health || exit 1",
    "logs": "tail -f logs/app.log",
    "backup": "node scripts/backup.js",
    "migrate": "node scripts/migrate.js",
    "reset": "node scripts/reset.js"
  },
  "keywords": [
    "coffee", 
    "ecommerce", 
    "api", 
    "express", 
    "mongodb", 
    "nodejs", 
    "backend", 
    "rest-api", 
    "production"
  ],
  "author": "Brew&Bean Team <dev@brewbean.com>",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "mongoose": "^8.16.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.4",
    "express-slow-down": "^2.0.1",
    "compression": "^1.7.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@types/node": "^20.10.5"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/brewbean/backend.git"
  },
  "bugs": {
    "url": "https://github.com/brewbean/backend/issues"
  },
  "homepage": "https://github.com/brewbean/backend#readme"
}
